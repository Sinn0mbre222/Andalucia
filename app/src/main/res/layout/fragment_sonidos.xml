<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonidos de Andalucía"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/verdeAndalucia"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btnSonido1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Himno de Andalucía"
        android:layout_marginBottom="10dp"
        app:backgroundTint="@null"
        android:background="@drawable/btn_borde_verde"
        android:minHeight="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/btnSonido2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chiste de Risitas"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_borde_blanco"
        app:backgroundTint="@null"
        android:minHeight="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnSonido3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Himno del Real Betis Balompie"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_borde_verde"
        app:backgroundTint="@null"
        android:minHeight="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>


    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parar Sonido"
        android:backgroundTint="@android:color/holo_red_dark"/>

</LinearLayout>