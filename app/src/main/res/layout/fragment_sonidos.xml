<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F9FA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonidos Destacados"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#006241"
        android:layout_marginBottom="12dp"/>

    <Button android:id="@+id/btnSonido1"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Himno de Andalucía" android:backgroundTint="#006241" android:textColor="#FFFFFF"
        android:layout_marginBottom="4dp"/>

    <Button android:id="@+id/btnSonido2"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Chiste de Risitas" android:backgroundTint="#FFFFFF" android:textColor="#000000"
        app:strokeWidth="1dp" app:strokeColor="#006241"
        android:layout_marginBottom="4dp"/>

    <Button android:id="@+id/btnSonido3"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Himno del Betis" android:backgroundTint="#006241" android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <Button android:id="@+id/btnStop"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="PARAR TODO" android:backgroundTint="#D32F2F" android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Más Sonidos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#006241"
        android:layout_marginBottom="12dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMasSonidos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>