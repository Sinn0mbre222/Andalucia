<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieDragonite"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/dragonite_hipo"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Ojú que mareo shiquillo!"
            android:textColor="@color/verdePrimario"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ni que fuera un domingo de resaca..."
            android:layout_marginBottom="30dp"
            android:textColor="@color/textoPrincipal" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieSol"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/sol_la_calo_andalucia"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieJamon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/jamon_corriendo"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAceituna"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/ninja_aceituna_cara"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <ImageView
            android:id="@+id/anim1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dragonite_betis"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/anim2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dragonite_bandera"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/anim3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dragonite_videos"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/anim4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/juan_y_medio"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/anim5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dragonite_betis"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>
</ScrollView>