<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/dragonite_borracho"
            android:layout_marginBottom="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Ojú que mareo shiquillo!"
            android:textColor="@color/verdePrimario"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ni que fuera un domingo de resaca..."
            android:layout_marginBottom="30dp"
            android:textColor="@color/textoPrincipal" />

        <ImageView
            android:id="@+id/anim1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dragonite_betis"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/anim2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/juan_y_medio"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/anim3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dragonite_betis"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/anim4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/juan_y_medio"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/anim5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dragonite_betis"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>
</ScrollView>